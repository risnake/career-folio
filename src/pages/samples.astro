---
import Layout from '../layouts/Layout.astro';
import { resumes } from '../data/resumes';
---

<Layout title="Sample Resumes">
  <section class="py-16 px-4 bg-slate-50">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold text-slate-900 mb-2">Sample Resumes</h1>
      <div class="w-16 h-1 bg-amber-600 rounded mb-8"></div>
      <p class="text-slate-700 leading-relaxed mb-12 max-w-3xl">
        Browse 14 sample resumes spanning diverse fields and formats. These examples
        demonstrate chronological, functional, and combination resume styles for
        candidates at various career stages — from recent graduates to experienced professionals.
      </p>

      <div class="space-y-10">
        {resumes.map((resume) => (
          <article class="bg-white rounded-lg shadow-sm p-8 border border-slate-200">
            {/* Header */}
            <div class="mb-6 pb-4 border-b border-slate-200">
              <div class="flex items-start justify-between flex-wrap gap-3">
                <h2 class="text-2xl font-bold text-slate-900">{resume.name}</h2>
                <span class="inline-block bg-amber-100 text-amber-800 text-xs font-medium px-3 py-1 rounded-full">
                  {resume.type}
                </span>
              </div>
              <p class="text-slate-500 text-sm mt-1">{resume.field}</p>
              <div class="flex flex-wrap gap-4 mt-3 text-sm text-slate-600">
                <span>{resume.contact.email}</span>
                {resume.contact.phone && <span>{resume.contact.phone}</span>}
                {resume.contact.linkedin && (
                  <span>{resume.contact.linkedin}</span>
                )}
              </div>
              {resume.contact.addresses && resume.contact.addresses.length > 0 && (
                <div class="flex flex-wrap gap-4 mt-1 text-sm text-slate-500">
                  {resume.contact.addresses.map((addr) => (
                    <span>{addr}</span>
                  ))}
                </div>
              )}
            </div>

            {/* Objective */}
            {resume.objective && (
              <div class="mb-6">
                <blockquote class="border-l-4 border-amber-300 pl-4 py-2 bg-amber-50 rounded-r-lg">
                  <p class="text-slate-700 italic text-sm">{resume.objective}</p>
                </blockquote>
              </div>
            )}

            {/* Education */}
            {resume.education && resume.education.length > 0 && (
              <div class="mb-6">
                <h3 class="text-lg font-semibold text-slate-900 mb-3 pb-1 border-b-2 border-amber-600 inline-block">
                  Education
                </h3>
                <div class="mt-3 space-y-4">
                  {resume.education.map((edu) => (
                    <div>
                      <div class="flex flex-wrap justify-between gap-2">
                        <p class="font-semibold text-slate-900">{edu.institution}</p>
                        <p class="text-sm text-slate-500">{edu.dates}</p>
                      </div>
                      <p class="text-slate-600 text-sm">{edu.location}</p>
                      <p class="text-slate-700 text-sm mt-1">{edu.degree}</p>
                      {edu.gpa && (
                        <p class="text-slate-600 text-sm">GPA: {edu.gpa}</p>
                      )}
                      {edu.coursework && (
                        <p class="text-slate-600 text-sm">
                          <span class="font-medium">Relevant Coursework:</span> {edu.coursework}
                        </p>
                      )}
                      {edu.details && (
                        <p class="text-slate-600 text-sm mt-1">{edu.details}</p>
                      )}
                    </div>
                  ))}
                </div>
              </div>
            )}

            {/* Experience Sections */}
            {resume.experienceSections && resume.experienceSections.map((section) => (
              <div class="mb-6">
                <h3 class="text-lg font-semibold text-slate-900 mb-3 pb-1 border-b-2 border-amber-600 inline-block">
                  {section.title}
                </h3>
                <div class="mt-3 space-y-5">
                  {section.items.map((item) => (
                    <div>
                      <div class="flex flex-wrap justify-between gap-2">
                        <p>
                          <span class="font-semibold text-slate-900">{item.title}</span>
                          {item.organization && (
                            <span class="text-slate-600"> — {item.organization}</span>
                          )}
                        </p>
                        <p class="text-sm text-slate-500">{item.dates}</p>
                      </div>
                      {item.location && (
                        <p class="text-slate-500 text-sm">{item.location}</p>
                      )}
                      {item.bullets && item.bullets.length > 0 && (
                        <ul class="mt-2 space-y-1 ml-4">
                          {item.bullets.map((bullet) => (
                            <li class="text-slate-700 text-sm relative pl-4 before:content-['•'] before:absolute before:left-0 before:text-slate-400">
                              {bullet}
                            </li>
                          ))}
                        </ul>
                      )}
                    </div>
                  ))}
                </div>
              </div>
            ))}

            {/* Skills */}
            {resume.skills && resume.skills.length > 0 && (
              <div class="mb-6">
                <h3 class="text-lg font-semibold text-slate-900 mb-3 pb-1 border-b-2 border-amber-600 inline-block">
                  Skills
                </h3>
                <div class="mt-3 space-y-2">
                  {resume.skills.map((skill) => (
                    <p class="text-sm text-slate-700">
                      <span class="font-medium text-slate-900">{skill.label}:</span> {skill.value}
                    </p>
                  ))}
                </div>
              </div>
            )}

            {/* Additional Info */}
            {resume.additionalInfo && resume.additionalInfo.length > 0 && (
              <div>
                <h3 class="text-lg font-semibold text-slate-900 mb-3 pb-1 border-b-2 border-amber-600 inline-block">
                  Additional Information
                </h3>
                <ul class="mt-3 space-y-1 ml-4">
                  {resume.additionalInfo.map((info) => (
                    <li class="text-slate-700 text-sm relative pl-4 before:content-['•'] before:absolute before:left-0 before:text-slate-400">
                      {info}
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>
