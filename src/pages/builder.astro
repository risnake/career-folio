---
import Layout from '../layouts/Layout.astro';
import ResumeBuilder from '../components/builder/ResumeBuilder';
---

<Layout title="Resume Builder" description="Build your resume step-by-step with AI-powered suggestions and export to PDF or DOCX.">
  <section class="py-16 md:py-20">
    <div class="mx-auto max-w-6xl px-6 lg:px-8">
      <div class="mb-10">
        <h1 class="text-4xl font-bold text-slate-900">Resume Builder</h1>
        <div class="mt-3 h-1 w-12 rounded bg-amber-500"></div>
        <p class="mt-4 text-muted max-w-2xl">
          Start from scratch or import an existing resume. Enhance your bullet points with AI,
          then export to PDF or DOCX.
        </p>
      </div>

      <ResumeBuilder client:load />
    </div>
  </section>
</Layout>
